<html>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO"
crossorigin="anonymous">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
<style>
.button {
  background-color: #45A29E;
  border: none;
  color: white;
  padding: 16px 32px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 16px;
  margin: 4px 2px;
  -webkit-transition-duration: 0.4s;
  transition-duration: 0.4s;
  cursor: pointer;
  border-radius: 10px;
}
.but1 {
  background-color: #45A29E;
  color: black;
  border: 2px solid #45A29E;
  border-radius: 10px;
}
.but1:hover {
  background-color: white;
  color: white;
}
.but2 {
  background-color: white;
  color: black;
  border: 2px solid #45A29E;
  text-decoration: none;
  border-radius: 10px;
}
.but2:hover {
  background-color: #45A29E;
  color: white;
}
.but3 {
  background-color: white;
  color: black;
  border: 2px solid #3498DB;
  padding: 5px;
  text-decoration: none;
  border-radius: 10px;
}
.but3:hover {
  background-color: #3498DB;
  color: white;
}
.bodybg{
  background-color: #1F2833;
}
.top{
  background-color: #45A29E;
  padding-top: 5px;
}
.bottom{
  background-color: #45A29E;
  padding-top: 5px;
  padding-bottom: 5px;
}
.row {
  display: flex;
}
.column {
  flex: 50%;
}
.example {
  background-color: lightgrey;
  width: 1000px;
  border: 15px solid black;
  padding: 10px;
  margin: auto;
  text-align: center;
  border-radius: 15px;
}
</style>

<body class="bodybg">
  <div class="example">
    <div class="top">
      <br><h3>Harvard Format</h3><br>
    </div>
      <div style="margin:auto ;width:700px">
        <table class="table table-striped">
          <thead>
            <tr style="text-align:center;">
              <th>Last Name</th>
              <th>First Name</th>
              <th>Year</th>
              <th>Title</th>
              <th>Place</th>
              <th>Publisher</th>
            </tr>
          </thead>
          <tbody>
            {{#each list}}
            <tr style="text-align:center;">
              <td>{{this.lastName}},</td>
              <td>{{this.firstName}}</td>
              <td>{{this.year}},</td>
              <td><i>{{this.title}},</i></td>
              <td>{{this.place}},</td>
              <td>{{this.publisher}}.</td>
              <td>
                <a href="/employee/{{this._id}}"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                <a href="/employee/delete/{{this._id}}" onclick="return confirm('Are you sure to delete this record ?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
      <div class="top">
        <br><h3>ACS Format</h3><br>
      </div>
        <div style="margin:auto;">
          <table class="table table-striped">
            <thead>
              <tr style="text-align:center;">
                <th>Last Name</th>
                <th>First Name</th>
                <th>Title</th>
                <th>Publisher</th>
                <th>Year</th>
                <th>Volume</th>
                <th>Issue</th>
                <th>Pages</th>
              </tr>
            </thead>
            <tbody>
              {{#each list}}
              <tr style="text-align:center;">
                <td>{{this.lastName}},</td>
                <td>{{this.firstName}}.</td>
                <td>"{{this.title}}".</td>
                <td><i>{{this.publisher}}</i>,</td>
                <td><b>{{this.year}}</b>,</td>
                <td><i>{{this.volume}}</i></td>
                <td>({{this.issue}}),</td>
                <td>{{this.pages}}.</td>
                <td>
                  <a href="/employee/{{this._id}}"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                  <a href="/employee/delete/{{this._id}}" onclick="return confirm('Are you sure to delete this record ?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
                </td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
        <hr>
        <div class="top">
        <br>
        <a class="btn btn-secondary" href="/employee"><i class="fa fa-plus"></i> Create New</a>
        <br><br>
        </div>
    </body>
    </html>
